<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MinechapApp"
        tools:targetApi="31">

        <!-- SplashActivity (Esta es la primera pantalla que se ejecuta) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registers Activity (Esta es la pantalla de registro) -->
        <activity
            android:name=".Registers"
            android:exported="true" />

        <!-- MainActivity (Solo se llamarÃ¡ desde otra actividad, no desde el inicio) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

    </application>

</manifest>
